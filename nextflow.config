process {
    //executor = 'local'    
    executor = 'sge'    
    clusterOptions = { "-l mem_free=" + task.memory.toString().replaceAll(/[\sB]/,'') }
    penv = 'OpenMP'// task.cpus automagically added
    maxRetries = 3
    errorStrategy = { task.attempt < 2 ? 'retry' : 'finish' }
    time = '2h'
    memory = '1 GB'
}
